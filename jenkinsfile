pipeline {
	agent any
        environment
            {
               PATH = "C:\\Program Files\\Git\\bin\\:$PATH"    
           }
		stages {
			stage('Build') {
                      	steps {
								echo 'Running build phase a batch file.'
								bat 'attempt1.bat'                           	}
                    	}
         	
         	stage('Test'){
         				steps{
         						echo 'Testing progress a python file.'
                                bat 'python test.py'
         					}
        			 	}
         	
         	stage('Deploy'){
         				steps{
         						echo 'Deploying is in  progress...'
                                // powershell '.\\build.sh'
                                echo pwd()
                                sh 'build.sh'
         					}
         				}

         }        
 }
