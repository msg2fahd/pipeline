pipeline {
	agent any
		stages {
			stage('Build') {
                      	steps {
								echo 'Running build phase a batch file.'
								bat 'attempt1.bat'                           	}
                    	}
         	
         	stage('Test'){
         				steps{
         						echo 'Testing progress a python file.'
                                bat 'python test.py'
         					}
        			 	}
         	
         	stage('Deploy'){
         				steps{
         						echo 'Deploying is in  progress...'
                                // powershell '.\\build.sh'
                                echo pwd()
                                sh 'C:\\Tools\\JENKINS_HOME\\workspace\\FirstPipeline\\build.sh'

         					}
         				}

         }        
 }
